<UserControl x:Class="WpfApp1.ColorSwatch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1"
             mc:Ignorable="d" 
             d:DesignHeight="110" d:DesignWidth="100" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0" Width="100" Height="50" VerticalAlignment="Top">
            <Rectangle.Fill>
                <SolidColorBrush Color="red"></SolidColorBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Label Grid.Row="1" Content="R, G, B:"></Label>
        <Label Grid.Row="2" Content=""></Label>
    </Grid>
</UserControl>
