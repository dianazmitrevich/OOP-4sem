<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Работа с базой данных"
        Height="450" Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        FontFamily="Noto Sans"
        FontSize="12">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Background="#fff" Padding="5 0 0 0" BorderBrush="LightGray" BorderThickness="0 1 0 1">
            <MenuItem Name="AddElement" Click="AddElement_Click" Height="25" Header="Добавление"></MenuItem>
            <MenuItem Name="EditElement" Click="EditElement_Click" Height="25" Header="Редактирование"></MenuItem>
            <MenuItem Name="DeleteElement" Click="DeleteElement_Click" Height="25" Header="Удаление"></MenuItem>
        </Menu>
        <StackPanel Name="MainField" Grid.Row="1">
            <local:Add></local:Add>
        </StackPanel>
    </Grid>
</Window>
