<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Работа с ado.net" Height="250" Width="400"
        ResizeMode="NoResize"
        FontFamily="Noto Sans"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button Click="AddButton_Click" Name="AddButton" Content="Добавить" Width="120" Height="30"></Button>
            <Button Click="RemoveButton_Click" Name="RemoveButton" Content="Удалить" Width="120" Height="30" Margin="0 10"></Button>
            <Button Click="EditButton_Click" Name="EditButton" Content="Редактировать" Width="120" Height="30"></Button>
        </StackPanel>
    </Grid>
</Window>
